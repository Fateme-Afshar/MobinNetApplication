<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:id="@+id/top_layout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            card_view:cardBackgroundColor="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="true" />

    <View
            android:id="@+id/top_layout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
    <View
            android:id="@+id/bottom_layout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="true" />

        <View
            android:id="@+id/bottom_layout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>