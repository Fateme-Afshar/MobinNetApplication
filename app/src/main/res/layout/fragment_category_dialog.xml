<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.mobinnetapplication.uiUtils.UiStyle"/>
        <variable
            name="fragment"
            type="com.example.mobinnetapplication.view.fragment.LayoutCategoryFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_8"
        android:elevation="10dp"
        android:layout_margin="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_category"
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toTopOf="@+id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/line"
            app:layout_constraintBottom_toTopOf="@+id/btn_alone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_alone"
            style="@style/Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.sendResult(UiStyle.ALONE)}"
            android:text="@string/alone"
            app:icon="@drawable/ic_alone"
            app:layout_constraintBottom_toTopOf="@+id/btn_two_part_big_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_category"
            app:layout_constraintVertical_chainStyle="spread" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_two_part_big_vertical"
            style="@style/Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.sendResult(UiStyle.TWO_VERTICAL)}"
            android:text="@string/two_category"
            app:icon="@drawable/ic_two_part_big_vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_two_part_big_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_alone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_two_part_big_horizontal"
            style="@style/Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.sendResult(UiStyle.TWO_HORIZONTAL)}"
            android:text="@string/two_category"
            app:icon="@drawable/ic_two_part_big_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_three_part_big_top_part"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_two_part_big_vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_three_part_big_top_part"
            style="@style/Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.sendResult(UiStyle.THREE_BIG_TOP)}"
            android:text="@string/three_category"
            app:icon="@drawable/ic_three_part_big_top_part"
            app:layout_constraintBottom_toTopOf="@+id/btn_three_part_big_bottom_part"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_two_part_big_horizontal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_three_part_big_bottom_part"
            style="@style/Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.sendResult(UiStyle.THREE_BIG_BOTTOM)}"
            android:text="@string/three_category"
            app:icon="@drawable/ic_three_part_big_bottom_part"
            app:layout_constraintBottom_toTopOf="@+id/btn_four_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_three_part_big_top_part" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_four_category"
            style="@style/Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.sendResult(UiStyle.FOUR_IN_ROW)}"
            android:text="@string/four_category"
            app:icon="@drawable/ic_category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_three_part_big_bottom_part" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>