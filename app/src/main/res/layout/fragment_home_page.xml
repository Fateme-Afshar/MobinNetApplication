<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.example.mobinnetapplication.view.fragment.HomePageFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ripple_light"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            android:layout_marginStart="8dp"
            android:onClick="@{()->fragment.onCategoryImvClickListener()}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_category" />

        <View
            android:id="@+id/top_layout_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{()->fragment.onCategoryPartBtnClickListener()}"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal_middle"
            app:layout_constraintEnd_toStartOf="@+id/top_layout_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal_top" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_top_layout_left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_green_oval"
            android:drawableTop="@drawable/ic_add"
            android:paddingTop="3dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@+id/top_layout_left"
            app:layout_constraintEnd_toEndOf="@+id/top_layout_left"
            app:layout_constraintStart_toStartOf="@+id/top_layout_left"
            app:layout_constraintTop_toTopOf="@+id/top_layout_left" />

        <View
            android:id="@+id/top_layout_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{()->fragment.onCategoryPartBtnClickListener()}"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal_middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/top_layout_left"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_top" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_top_layout_right"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_green_oval"
            android:drawableTop="@drawable/ic_add"
            android:paddingTop="3dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@+id/top_layout_right"
            app:layout_constraintEnd_toEndOf="@+id/top_layout_right"
            app:layout_constraintStart_toStartOf="@+id/top_layout_right"
            app:layout_constraintTop_toTopOf="@+id/top_layout_right"
            />


        <View
            android:id="@+id/bottom_layout_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{()->fragment.onCategoryPartBtnClickListener()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bottom_layout_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_middle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bottom_layout_left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_green_oval"
            android:drawableTop="@drawable/ic_add"
            android:paddingTop="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_layout_left"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/bottom_layout_left"
            app:layout_constraintStart_toStartOf="@+id/bottom_layout_left"
            app:layout_constraintTop_toTopOf="@+id/bottom_layout_left" />

        <View
            android:id="@+id/bottom_layout_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:background="@drawable/bg_dark_gray_rounded_10"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{()->fragment.onCategoryPartBtnClickListener()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bottom_layout_left"
            app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_middle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bottom_layout_right"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_gradient_green_oval"
            android:drawableTop="@drawable/ic_add"
            android:paddingTop="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_layout_right"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/bottom_layout_right"
            app:layout_constraintStart_toStartOf="@+id/bottom_layout_right"
            app:layout_constraintTop_toTopOf="@+id/bottom_layout_right" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>