<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobinNetApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/iransans_mobile</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">@string/search</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="BtnGradientGreenStyle">
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.CustomStyle">
        <item name="android:textColorHint">@color/evening_sea</item>
        <item name="startIconTint">@color/dark_green</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/light_green</item>
        <item name="hintTextColor">@color/green_yellow</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/bg_bottom_border_light_gray</item>
    </style>
    
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="IconStyle">
        <item name="android:translationZ">9999dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_light</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.MaterialBtnStyle">
        <item name="android:background">@drawable/ripple_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">@color/gray</item>
        <item name="iconPadding">8dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizePresetSizes">@array/autosize_text_sizes</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="MainTextStyle">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizePresetSizes">@array/autosize_text_sizes</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>